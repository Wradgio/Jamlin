{
	"sources": {
		"directories": [
			{
				"path": "templates/", 
				"extensions": [ "html" ],
				"traverse": false, 
				"selectors": {
					"texts": { 
						"type": "text", 
						"selector": "p, a"
					}, 
					"params": { 
						"type": "attribute", 
						"selector": "a[title], img[title]", 
						"attrName": "title"
					}
				}
			}
		], 
		"files": [
			{
				"path": "test-*.html",
				"selectors": {
					"texts": { 
						"type": "text", 
						"selector": "p, a"
					}, 
					"params": { 
						"type": "attribute", 
						"selector": "a[title], img[title]", 
						"attrName": "title"
					}
				}
			}
		]
	},	
	"target": {
		"replace_file": true, 
		"replace_pattern": "*-$lang.*"
	}
}
